{
  "name": "${pluginName}",
  "version": "0.0.0",
  "description": "PostCSS plugin ${description}",
  "keywords": ["postcss", "css", "postcss-plugin", "${pluginName}"],
  "scripts": {
    "unit": "node --test index.test.js",
    "test": "npm run unit && eslint ."
  },
  "author": "${authorName} <${authorEmail}>",
  "license": "MIT",
  "repository": "${gitHubName}/${pluginName}",
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.4.27"
  },
  "devDependencies": {
    "eslint": "^8.47.0",
    "postcss": "^8.4.27"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": ["eslint:recommended"]
  }
}
